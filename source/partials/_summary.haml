%article.block.blog-summary
  .post-summary
    = partial("partials/meta", :locals => {post: post})

    - if post.data.thumb
      .post-thumbnail
        %a{:href => post.url}
          %img.thumb{:src => "/images/blog/"+post.data.thumb}
    .post-content
      %h3.post-title
        %a{:href => post.url}
          =post.title
      %p.post-excerpt
        =Sanitize.clean(post.summary(100), Sanitize::Config::RESTRICTED)
