%article.block.post-summary
  .post-meta
    .meta-date=post.date.strftime('%b %e, %Y')
    %a.meta-comments{:href=> post.url+'#disqus_thread', 'data-disqus-identifier' => post.slug} No Comments
  .post-content
    %h3.post-title
      %a{:href => post.url}
        =post.title
    .post-excerpt
      =Sanitize.clean(post.summary(100), Sanitize::Config::RESTRICTED)
      %a{:href => post.url} â†’&nbsp;Read&nbsp;more

  - if post.data.thumb
    .post-thumbnail
      %a{:href => post.url}
        %img.thumb{:src => "/images/blog/"+post.data.thumb}